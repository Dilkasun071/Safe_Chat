<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kasun.dilchat.LoginActivity">
    <include layout="@layout/app_bar_layout" android:id="@+id/log_app_bar"/>

    <EditText
        android:id="@+id/log_user"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/log_pass"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="145dp" />

    <EditText
        android:id="@+id/log_pass"
        android:layout_width="346dp"
        android:layout_height="41dp"
        android:layout_above="@+id/log_login_btn"
        android:layout_alignLeft="@+id/log_user"
        android:layout_alignStart="@+id/log_user"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:password="true"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="199dp" />

    <Button
        android:id="@+id/log_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/log_user"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/log_user"
        android:layout_marginBottom="169dp"
        android:background="@color/colorAccent"
        android:onClick="login"
        android:text="Login"
        tools:layout_editor_absoluteX="271dp"
        tools:layout_editor_absoluteY="247dp" />
</RelativeLayout>
